<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_margin="7dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Channel Code"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:background="#1C6FB4"
            android:padding="15dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/edit1"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check your doctor's profile and submit the channel code here. Ask for appoinment via inbox, if he is inactive now. Remember, you can not join anyone if he is inactive or you just put a wrong channel code."
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textColor="#200404"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/patient_channel_code"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="18dp"
                    android:hint="  Enter the channel code"
                    android:paddingStart="8dp"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:background="@drawable/edit1"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/ic_key"
                    android:drawableTint="#03A9F4"/>

                <Button
                    android:id="@+id/patient_continue_button"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Continue"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="35dp"
                    android:background="#175C94"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>