<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeveloperProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/card_developer_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#107CD5">

                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        style="@style/circleImageView"
                        app:civ_border_width="1dp"
                        android:src="@drawable/amirulislam"
                        app:civ_border_color="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amirul Islam Al Mamun"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#fff"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Competitive programmer | Developer"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="#FFEB3B"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/developer_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit1"
                android:padding="12dp"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="I'm a competitive programmer and mentor at BRAC University. I am studying in Computer Science here and also working as Teaching Assistant."/>

            <TextView
                android:id="@+id/developer_bio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit1"
                android:padding="12dp"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="I always wish for better world where none will suffer for hunger and die helplessly without any treatment. Moreover, I also like to work for street children so that they can get basic education at least."/>

            <TextView
                android:id="@+id/developer_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/edit1"
                android:textColor="#000"
                android:text="Mail me: amirulislam.bracu@gmail.com"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow me"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="30dp"
                android:layout_below="@+id/developer_bio"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/amirul_facebook"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:background="@drawable/logo_facebook"/>

                <Button
                    android:id="@+id/amirul_linkedin"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:background="@drawable/logo_linkedin"/>

                <Button
                    android:id="@+id/amirul_github"
                    android:layout_width="47dp"
                    android:layout_height="37dp"
                    android:padding="10dp"
                    android:background="@drawable/logo_github"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>