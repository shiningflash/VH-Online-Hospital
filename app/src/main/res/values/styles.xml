<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenVideoTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#020000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="MyEditTextStyle1" parent="android:Widget.EditText">
        <item name="android:layout_width">195dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#020000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="TableTVStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">left|center</item>
    </style>

    <style name="TableETStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/edit1</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="HomepageTitleStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#F3353434</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HomepageTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#BA353434</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DoctorTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="style_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit1</item>
        <item name="android:textColorHint">#A59595</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/button1</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="style_relative_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#B6A3A3</item>
    </style>


    <style name="circleImageView">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_add_a_photo_black_24dp</item>
    </style>

    <style name="circleImageViewCard">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
